function toggleLinks(){
	
	$('#insert<%= @id %>').click(function(){
        $('#insert<%= @id %>').hide(function(){
  	        $("#remove<%= @id %>").show();
	    });
	});
		$('#remove<%= @id %>').click(function(){
            $('#remove<%= @id %>').hide();
  	        $("#remove<%= @id %>").show();
  		    return false;
        });
};

$(window).load(function(){	

 toggleLinks();
});